<h1>Todo App</h1>
  <div class="table">
    
    <div class="col-md-6">
          <% @todos.each do |todo| %>
          <div class="well">
            <h2>Tarea</h2>
            <h3><%= todo.description %>
            <h3>Estado Actual:	
            <% if todo.completed == false %>
 				<%= 	"Pendiente." %> 
 			<% else todo.completed == false %>
 				<%= 	"Completa." %>
			<% end %> </h3>
			<h3><%= link_to "Ver Detalle", todo  %>
            </h3>
            <h3><%= link_to "Borrar", todo, method: :delete  %>
            </h3>
          </div>
          <% end %>
    </div>  



